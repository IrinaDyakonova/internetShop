<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.IndexController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>allUsers</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.ShowAllUsersController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>allUsers</servlet-name>
        <url-pattern>/users/all</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>registration</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.RegistrationController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>injectData</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.InjectDataController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>injectData</servlet-name>
        <url-pattern>/users/injectData</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteUser</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.DeleteUserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteUser</servlet-name>
        <url-pattern>/users/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addProduct</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.CreateProductController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addProduct</servlet-name>
        <url-pattern>/products/addProduct</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>allProduct</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.ShowAllProductsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>allProduct</servlet-name>
        <url-pattern>/products/all</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>injectProducts</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.InjectProductsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>injectProducts</servlet-name>
        <url-pattern>/products/injectDataProducts</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>showShoppingCart</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.ShowShoppingCartController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>showShoppingCart</servlet-name>
        <url-pattern>/shoppingCarts/all</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addProductToCart</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.AddProductToCartController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addProductToCart</servlet-name>
        <url-pattern>/products/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addOrder</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.CompleteOrderController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addOrder</servlet-name>
        <url-pattern>/orders/add</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>showOrder</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.ShowNewOrderController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>showOrder</servlet-name>
        <url-pattern>/orders/new</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteProductFromCart</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.DeleteProductFromCartController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteProductFromCart</servlet-name>
        <url-pattern>/products/deleteFromCart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteProductAdmin</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.DeleteProductFromDatabaseController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteProductAdmin</servlet-name>
        <url-pattern>/products/deleteAdmin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>showListProductAdmin</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.ShowAllProductsForAdminController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>showListProductAdmin</servlet-name>
        <url-pattern>/products/showProductsAdmin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>showAllOrdersDB</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.ShowAllOrdersController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>showAllOrdersDB</servlet-name>
        <url-pattern>/orders/all</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>showOrderByUser</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.ShowOrderController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>showOrderByUser</servlet-name>
        <url-pattern>/orders/showOrdersByUser</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>OrdersDelete</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.DeleteOrderController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrdersDelete</servlet-name>
        <url-pattern>/orders/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>authenticationFilter</filter-name>
        <filter-class>mate.academy.internetshop.web.filters.AuthenticationFilters</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>authenticationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>
